{{> guest-header}}
{{> admin-header}}
<main>
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="header-bar">Cats - View All</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Vibe</th>
                                <th>Edit / Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each cats}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{vibe}}</td>
                                    <td>
                                        <a class="btn btn-primary" href="/admin/cats/edit/{{id}}">Edit</a>
                                        <a class="btn btn-danger delete-button" href="/admin/cats/delete/{{id}}">Delete</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <p><a class="btn btn-primary" href="/admin/cats/add">Add Cat</a></p>        
                </div>
            </div>
        </div>
    </div>
</main>
{{> footer}}